# Service Configuration
SERVICE_NAME=auth-service
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_db
DB_USER=auth_user
DB_PASSWORD=auth_password
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Event Bus Configuration
EVENT_BUS_TYPE=redis
RABBITMQ_URL=amqp://admin:admin_password@localhost:5672
RABBITMQ_EXCHANGE=events

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# JWT Configuration
JWT_SECRET=your-secret-key-here-min-32-chars
JWT_ISSUER=project-scope-analyzer
JWT_EXPIRES_IN=1h

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Account Lockout
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION=1800

# Metrics
METRICS_PORT=9091

# CORS Configuration
# Comma-separated list of allowed origins
# Example for production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Service-to-Service Authentication
# API key for inter-service communication
# Generate with: openssl rand -base64 32
# IMPORTANT: Set this in production to secure internal APIs
SERVICE_API_KEY=your-service-api-key-here
