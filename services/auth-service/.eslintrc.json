{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "no-console": "warn",
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/explicit-function-return-type": [
            "warn",
            {
                "allowExpressions": true,
                "allowTypedFunctionExpressions": true
            }
        ],
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "no-debugger": "error",
        "no-alert": "error",
        "prefer-const": "error",
        "no-var": "error",
        "no-eval": "error",
        "no-implied-eval": "error"
    },
    "env": {
        "node": true,
        "es2022": true
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "build/",
        "*.js",
        "*.d.ts",
        "coverage/"
    ]
}