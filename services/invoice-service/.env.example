# Service Configuration
SERVICE_NAME=invoice-service
PORT=3006
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for Neon/serverless)
DATABASE_URL=postgresql://user:password@localhost:5432/project_scope_analyzer

# Option 2: Use individual database config
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=project_scope_analyzer
# DB_USER=postgres
# DB_PASSWORD=password
# DB_MAX_CONNECTIONS=20

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ISSUER=project-scope-analyzer
JWT_EXPIRES_IN=1h

# Service-to-Service Authentication
SERVICE_API_KEY=your-service-api-key-change-in-production

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application Configuration
APP_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_PORT=9096
