# Service Configuration
SERVICE_NAME=notification-service
PORT=3005
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for Neon/serverless)
DATABASE_URL=postgresql://user:password@localhost:5432/project_scope_analyzer

# Option 2: Use individual database config
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=project_scope_analyzer
# DB_USER=postgres
# DB_PASSWORD=password
# DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ISSUER=project-scope-analyzer
JWT_EXPIRES_IN=1h

# Service-to-Service Authentication
SERVICE_API_KEY=your-service-api-key-change-in-production

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_PORT=9095
